{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "lib": [ "esnext" ],
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ]
}
